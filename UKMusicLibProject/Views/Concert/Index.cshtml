<section id="aboutUs">
    <!--Aboutus-->
    <div class="inner_wrapper about-us aboutUs-container fadeInLeft animated wow">
        <div class="container">
          
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Location</th>
                    <th>Revenue Generated</th>
                    <th>Ticket Sold</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Date)</td>
                        <td>@Html.DisplayFor(modelItem => item.Location)</td>
                        <td>@Html.DisplayFor(modelItem => item.RevenueGenerated)</td>
                        <td>@Html.DisplayFor(modelItem => item.TicketSold)</td>
                        <td>
                            <a id="editConcertModal" asp-action="EditUser" asp-route-id="@item.ConcertId" class="btn btn-info">
                                Edit
                            </a>
                            <a id="deleteConcertModal" asp-action="Delete" asp-route-id="@item.ConcertId" class="btn btn-danger">
                                Delete
                            </a>
                            <a id="detailsConcertmodel" class="btn btn-success" asp-action="Details" asp-route-id="@item.ConcertId">Detail</a>

                    </tr>
                }
            </tbody>
        </table>
        </div>
        </div>
        </section>

