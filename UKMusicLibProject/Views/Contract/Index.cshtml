@model IEnumerable<ContractViewModel>
@using UKMusicLibProject.Models


<section id="Portfolio" class="content">

    <!-- Container -->
    <div class="container portfolio_title">

        <!-- Title -->
        <div class="section-title">
            <h2>Contract List</h2>

        </div>
        <!--/Title -->

    </div>

    <div class="portfolio-top"></div>

    <!-- Portfolio Filters -->
    <div class="portfolio">

        <div id="filters" class="sixteen columns">
            <ul class="clearfix">

                <li>

                    <a id="createArtist" asp-area="" asp-action="AddContract">
                        <h5>Add Contract</h5>
                    </a>
                </li>

            </ul>
        </div>
    </div>
</section>
<section id="aboutUs">
    <!--Aboutus-->
    <div class="inner_wrapper about-us aboutUs-container fadeInLeft animated wow">
        <div class="container">

            <table class="table table-striped">
            <thead>
                <tr>
                    <th>Contract Type</th>
                    <th>Contract With</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Revenue</th>
                    <th>Status</th>
                   
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.ContractType)</td>
                        <td>@Html.DisplayFor(modelItem => item.ContractWith)</td>
                        <td>@Html.DisplayFor(modelItem => item.StartDate)</td>
                        <td>@Html.DisplayFor(modelItem => item.EndDate)</td>
                        <td>@Html.DisplayFor(modelItem => item.Revenue)</td>
                        <td>@Html.DisplayFor(modelItem => item.Status)</td>
                
                        <td>
                            <a id="editContractModal" asp-action="EditUser" asp-route-id="@item.ContractId" class="btn btn-info">
                                Edit
                            </a>                        
                            <a id="deleteContractModal" asp-action="Delete" asp-route-id="@item.ContractId" class="btn btn-danger">
                                Delete
                            </a>
                            <a id="detailsContractmodel" class="btn btn-success" asp-action="Details" asp-route-id="@item.ContractId">Detail</a>
                        
                    </tr>
                }
            </tbody>
        </table>
        
    </div>
</div>
</section>
 
