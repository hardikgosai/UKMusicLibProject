@model IEnumerable<ArtistViewModel>
@using UKMusicLibProject.Models


<!-- Portfolio -->
<section id="Portfolio" class="content ">

    <!-- Container -->
    <div class="container portfolio_title">

        <!-- Title -->
        <div class="section-title">
            <h2>Artist List</h2>
            <h6>All Artist displayed here</h6>

        </div>
        <!--/Title -->

    </div>
    <!-- Container -->

    <div class="portfolio-top"></div>

    <!-- Portfolio Filters -->
    <div class="portfolio">

        <div id="filters" class="sixteen columns">
            <ul class="clearfix">
                <li>
                    <a id="ListArtist" asp-area="" asp-action="ListArtist" class="active" data-filter="*">
                        <h5>List Artist</h5>
                    </a>
                </li>
                <li>

                    <a id="createArtist" asp-area="" asp-action="AddArtist">
                        <h5>Add Artist</h5>
                    </a>
                </li>
             
            </ul>
        </div>
        <!--/Portfolio Filters -->
        <!-- Portfolio Wrapper -->
        <div class="isotope fadeInLeft animated wow grid" style="position: relative; overflow: hidden; height: 480px;" id="portfolio_wrapper">
            <!-- Portfolio Item -->
            @foreach (var item in Model)
            {
                <figure style="position: absolute; left: 10px; top: 10px; transform: translate3d(0px, 0px, 0px) scale3d(1, 1, 1);height:370px; width: 500px; opacity: 1;" class="portfolio-item one-four   animals isotope-item effect-oscar">

                    <div class="portfolio_img">
                        <img src="@item.ImageDataUrl" alt="Portfolio 1" style="height:350px; width:400px;">
                        <p>@item.ArtistName</p>
                    </div>
                    <figcaption>
                        <div>
                            <a href="@item.ImageDataUrl" class="fancybox">
                                @*<h2>Warm <span>Oscar</span></h2>
                            <p>Oscar is a decent man. He used to clean porches with pleasure.</p>*@
                                <h2>@item.ArtistName</h2>
                            </a>
                            <div class="sixteen columns">
                                <ul class="clearfix">
                                    <li>
                                        <p>@item.SortDescription</p>
                                    </li>
                                    <li>
                                        <a class="active" asp-area="" asp-action="ArtistDetail" asp-route-id="@item.ArtistId">
                                            <h5 style="color:white!important;">Click here for more detail..</h5>
                                        </a>
                                    </li>
                                </ul>

                            </div>
                        </div>
                    </figcaption>
                </figure>


            }

        </div>
        <!--/Portfolio Wrapper -->

    </div>
    <!--/Portfolio Filters -->

    <div class="portfolio_btm"></div>


    <div id="project_container">
        <div class="clear"></div>
        <div id="project_data"></div>
    </div>


</section>
